@using ERecords.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - EMS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <div class="row">
        <!-- SideBar -->

        <div class="col-md-2 bg-grey color-green height">
            &nbsp; ||| <a href="@Url.Action("Index", "Home")"><img src="~/Content/img/logo-white.png" /></a> |||
            &nbsp; &nbsp; &nbsp; &nbsp; <hr />
            @if (User.IsInRole(RoleName.Admin))
            {
                <p>
                    &nbsp; <a href="@Url.Action("Create", "Admin")" class="btn btn-primary col-md-12">Add New Employee</a>
                </p>
            }
        </div>

        <!-- Body -->

        <div class="col-md-10 bg-ash bt-width-override height">
            <!-- NavBar -->
            <div class="navbar navbar-default minustwenty">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("EMS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="navbar-collapse collapse bg-white">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
            <div class="container body-content bg-white height">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - EMS</p>
                </footer>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
